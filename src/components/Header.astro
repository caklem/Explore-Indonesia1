<script>
  function initMobileMenu() {
    const hamburger = document.querySelector(".hamburger") as HTMLElement;
    const sidebar = document.querySelector(".mobile-sidebar") as HTMLElement;
    const overlay = document.querySelector(".mobile-overlay") as HTMLElement;
    const navLinks = document.querySelectorAll(".mobile-sidebar .nav-menu a") as NodeListOf<HTMLAnchorElement>;
    const body = document.body;

    if (!hamburger || !sidebar || !overlay) {
      console.log("Mobile menu elements not found");
      return;
    }

    console.log("Mobile menu initialized");

    function toggleSidebar() {
      const isActive = sidebar.classList.contains("active");
      
      if (isActive) {
        closeSidebar();
      } else {
        openSidebar();
      }
    }

    function openSidebar() {
      console.log("Opening sidebar");
      hamburger.classList.add("active");
      sidebar.classList.add("active");
      overlay.classList.add("active");
      
      // Prevent body scroll when sidebar is open
      body.style.overflow = 'hidden';
      body.style.position = 'fixed';
      body.style.width = '100%';
      body.style.top = `-${window.scrollY}px`;
    }

    function closeSidebar() {
      console.log("Closing sidebar");
      hamburger.classList.remove("active");
      sidebar.classList.remove("active");
      overlay.classList.remove("active");
      
      // Re-enable body scroll and restore position
      const scrollY = body.style.top;
      body.style.overflow = '';
      body.style.position = '';
      body.style.width = '';
      body.style.top = '';
      
      if (scrollY) {
        window.scrollTo(0, parseInt(scrollY || '0') * -1);
      }
    }

    // Close sidebar on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar.classList.contains('active')) {
        closeSidebar();
      }
    });

    // Close sidebar on window resize to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768 && sidebar.classList.contains('active')) {
        closeSidebar();
      }
    });

    // Hamburger click event
    hamburger.addEventListener("click", (e) => {
      e.preventDefault();
      e.stopPropagation();
      console.log("Hamburger clicked");
      toggleSidebar();
    });
    
    // Keyboard accessibility for hamburger button
    hamburger.addEventListener("keydown", (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleSidebar();
      }
    });
    
    // Overlay click event
    overlay.addEventListener("click", (e) => {
      e.preventDefault();
      console.log("Overlay clicked");
      closeSidebar();
    });

    // Navigation links click events
    navLinks.forEach((link, index) => {
      link.addEventListener("click", (e) => {
        console.log(`Nav link ${index} clicked:`, link.href);
        
        // Don't prevent default if it's the same page
        const href = link.getAttribute("href");
        const currentPath = window.location.pathname;
        
        if (href === currentPath) {
          e.preventDefault();
          closeSidebar();
          return;
        }
        
        // Allow normal navigation for different pages
        closeSidebar();
        
        // Optional: Add smooth transition effect
        if (href) {
          e.preventDefault();
          document.body.classList.add("fade-out");
          setTimeout(() => {
            window.location.href = href;
          }, 300);
        }
      });
    });

    // Touch swipe to close sidebar
    let startX = 0;
    let currentX = 0;
    let isDragging = false;

    sidebar.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
      isDragging = true;
    }, { passive: true });

    sidebar.addEventListener('touchmove', (e) => {
      if (!isDragging) return;
      currentX = e.touches[0].clientX;
      const deltaX = currentX - startX;
      
      // Only allow swiping to the right (closing)
      if (deltaX > 0) {
        const progress = Math.min(deltaX / 200, 1);
        sidebar.style.transform = `translateX(${deltaX}px)`;
        overlay.style.opacity = `${1 - progress}`;
      }
    }, { passive: true });

    sidebar.addEventListener('touchend', () => {
      if (!isDragging) return;
      isDragging = false;
      
      const deltaX = currentX - startX;
      
      // Close if swiped more than 100px to the right
      if (deltaX > 100) {
        closeSidebar();
      }
      
      // Reset transform
      sidebar.style.transform = '';
      overlay.style.opacity = '';
    }, { passive: true });
  }

  function initScrollDetection() {
        const header = document.querySelector(".header") as HTMLElement;
        const logo = document.querySelector(".logo") as HTMLElement;
        const navLinks = document.querySelectorAll(".nav-menu a") as NodeListOf<HTMLElement>;    if (!header) return;

    const isDarkMode = header.classList.contains('dark-mode');

    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        header.classList.add("scrolled");
        
        header.style.background = "rgba(255, 255, 255, 0.95)";
        header.style.backdropFilter = "blur(20px)";
        header.style.boxShadow = "0 2px 20px rgba(0, 0, 0, 0.1)";

        if (logo) {
          logo.style.color = "#333";
          logo.style.textShadow = "none";
        }
        navLinks.forEach((link) => {
          if (link.classList.contains("active")) {
            link.style.color = "#ff6b6b";
          } else {
            link.style.color = "#333";
          }
          link.style.textShadow = "none";
        });
      } else {
        header.classList.remove("scrolled");
        header.style.background = "transparent";
        header.style.backdropFilter = "none";
        header.style.boxShadow = "none";

        if (logo) {
          if (isDarkMode) {
            logo.style.color = "white";
            logo.style.textShadow = "2px 2px 4px rgba(0, 0, 0, 0.5)";
          } else {
            logo.style.color = "#333";
            logo.style.textShadow = "none";
          }
        }
        navLinks.forEach((link) => {
          if (link.classList.contains("active")) {
            link.style.color = "#ff6b6b";
          } else {
            if (isDarkMode) {
              link.style.color = "white";
              link.style.textShadow = "1px 1px 2px rgba(0, 0, 0, 0.5)";
            } else {
              link.style.color = "#333";
              link.style.textShadow = "none";
            }
          }
        });
      }
    });
  }

  function setActiveNavigation() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll(".nav-menu a") as NodeListOf<HTMLAnchorElement>;

    navLinks.forEach((link) => {
      link.classList.remove("active");
      const linkPath = new URL(link.href).pathname;
      if (linkPath === currentPath) {
        link.classList.add("active");
      }
    });
  }

  function initPageTransitions() {
    const navLinks = document.querySelectorAll(".nav-menu a:not(.mobile-sidebar .nav-menu a)") as NodeListOf<HTMLAnchorElement>;
    
    navLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        
        navLinks.forEach(l => l.classList.remove("active"));
        link.classList.add("active");
        
        document.body.classList.add("fade-out");
        const href = link.getAttribute("href");
        if (href) {
          setTimeout(() => {
            window.location.href = href;
          }, 300);
        }
      });
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    console.log("DOM Content Loaded - Initializing Header");
    
    // Initialize all functions
    initMobileMenu();
    initScrollDetection();
    setActiveNavigation();
    initPageTransitions();
    
    // Test hamburger functionality
    const hamburger = document.querySelector(".hamburger");
    if (hamburger) {
      console.log("Hamburger found:", hamburger);
    } else {
      console.log("Hamburger NOT found");
    }
    
    setTimeout(() => {
      document.body.style.opacity = "1";
    }, 100);
  });

  // Backup initialization for Astro
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initMobileMenu();
    });
  } else {
    // DOM already loaded
    setTimeout(() => {
      initMobileMenu();
    }, 100);
  }

  // Emergency fallback - event delegation
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    
    // Check if clicked element is hamburger or its child
    if (target.closest('.hamburger')) {
      e.preventDefault();
      e.stopPropagation();
      console.log("Hamburger clicked via delegation");
      
      const hamburger = document.querySelector('.hamburger') as HTMLElement;
      const sidebar = document.querySelector('.mobile-sidebar') as HTMLElement;
      const overlay = document.querySelector('.mobile-overlay') as HTMLElement;
      
      if (hamburger && sidebar && overlay) {
        const isActive = sidebar.classList.contains('active');
        
        if (isActive) {
          hamburger.classList.remove('active');
          sidebar.classList.remove('active');
          overlay.classList.remove('active');
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.width = '';
        } else {
          hamburger.classList.add('active');
          sidebar.classList.add('active');
          overlay.classList.add('active');
          document.body.style.overflow = 'hidden';
          document.body.style.position = 'fixed';
          document.body.style.width = '100%';
        }
      }
    }
    
    // Close sidebar when clicking overlay
    if (target.closest('.mobile-overlay')) {
      const hamburger = document.querySelector('.hamburger') as HTMLElement;
      const sidebar = document.querySelector('.mobile-sidebar') as HTMLElement;
      const overlay = document.querySelector('.mobile-overlay') as HTMLElement;
      
      if (hamburger && sidebar && overlay) {
        hamburger.classList.remove('active');
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.width = '';
      }
    }
  });
</script>
