<style>
  .footer {
    background: #f4f4f4;
    color: #2c3e50;
    margin-top: auto;
    font-family: "Noto Sans", sans-serif;
    border-top: 1px solid #e9ecef;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 40px 20px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-logo-section {
    max-width: 300px;
  }

  .footer-logo {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
    color: #2c3e50;
    letter-spacing: 2px;
    text-transform: uppercase;
    display: block;
    margin-bottom: 15px;
  }

  .logo {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo-image {
    width: auto;
    height: 60px;
    max-width: 100%;
    object-fit: contain;
    filter: brightness(1) contrast(1);
    transition: all 0.3s ease;
  }

  .logo-image:hover {
    filter: brightness(1.1) contrast(1.1);
  }

  .logo-highlight {
    color: #a3b184;
  }

  .footer-description {
    color: #6c757d;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .footer-links h4,
  .footer-services h4,
  .footer-contact h4 {
    color: #2c3e50;
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-links ul,
  .footer-services ul {
    list-style: none;
    padding: 0;
  }

  .footer-links li,
  .footer-services li {
    margin-bottom: 10px;
  }

  .footer-links a {
    color: #6c757d;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.9rem;
  }

  .footer-links a:hover {
    color: #a3b184;
  }

  .footer-services li {
    color: #6c757d;
    font-size: 0.9rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    color: #6c757d;
    font-size: 0.9rem;
  }

  .contact-icon {
    margin-right: 10px;
    font-size: 1rem;
  }

  .whatsapp-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    margin-right: 10px;
    flex: 0 0 20px;
  }

  .contact-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .contact-link:hover {
    color: #2c7a4b;
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid #dee2e6;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    background: rgba(233, 236, 239, 0.3);
    margin: 40px 0 0 0;
    padding: 25px 60px;
    backdrop-filter: blur(10px);
    border-radius: 8px;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .copyright {
    color: #495057;
    font-size: 0.9rem;
    margin: 0;
    font-weight: 500;
    letter-spacing: 0.5px;
  }

  .by-text {
    color: #6c757d;
    font-size: 0.8rem;
    margin: 0;
    font-weight: 400;
    opacity: 0.9;
  }

  .footer-right {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .follow-text {
    color: #495057;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .footer-social {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
    color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .social-icon:hover {
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }

  .social-icon.instagram {
    background: linear-gradient(
      45deg,
      #f09433 0%,
      #e6683c 25%,
      #dc2743 50%,
      #cc2366 75%,
      #bc1888 100%
    );
    color: white;
  }

  .social-icon.instagram:hover {
    box-shadow: 0 4px 15px rgba(225, 48, 108, 0.3);
  }

  .social-icon.tiktok {
    background: #000000;
    color: white;
  }

  .social-icon.tiktok:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .social-icon.whatsapp {
    background: #25d366;
    color: white;
  }

  .social-icon.whatsapp:hover {
    box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
  }

  /* Responsive Design */
  @media (min-width: 1200px) {
    .logo-image {
      height: 150px;
    }

    .footer-logo {
      font-size: 2rem;
    }
  }

  @media (max-width: 1024px) and (min-width: 769px) {
    .logo-image {
      height: 150px;
    }
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: 40px 20px 20px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .footer-logo-section {
      max-width: 100%;
    }

    .logo-image {
      height: 100px;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 20px;
      margin: 40px 0 0 0;
      padding: 25px 40px;
      border-radius: 6px;
    }

    .footer-left {
      align-items: center;
      order: 2;
    }

    .footer-right {
      flex-direction: row;
      gap: 15px;
      order: 1;
      justify-content: center;
    }

    .follow-text {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 30px 15px 15px;
    }

    .footer-content {
      gap: 25px;
    }

    .footer-logo {
      font-size: 1.5rem;
    }

    .logo-image {
      height: 100px;
    }

    .contact-item {
      justify-content: center;
    }

    .footer-bottom {
      margin: 40px 0 0 0;
      padding: 20px 30px;
      gap: 15px;
      border-radius: 4px;
    }

    .social-icon {
      width: 32px;
      height: 32px;
    }

    .social-icon svg {
      width: 16px;
      height: 16px;
    }

    .copyright {
      font-size: 0.85rem;
    }

    .follow-text {
      font-size: 0.8rem;
    }

    .by-text {
      font-size: 0.75rem;
    }

    .footer-social {
      gap: 12px;
    }
  }
</style>
