<style>
    .footer {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        color: #ecf0f1;
        margin-top: auto;
        font-family: 'Noto Sans', sans-serif;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 60px 40px 20px;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr;
        gap: 40px;
        margin-bottom: 40px;
    }

    .footer-logo-section {
        max-width: 300px;
    }

    .footer-logo {
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.8rem;
        font-weight: 700;
        text-decoration: none;
        color: #ecf0f1;
        letter-spacing: 2px;
        text-transform: uppercase;
        display: block;
        margin-bottom: 15px;
    }

    .logo-highlight {
        color: #ff6b6b;
    }

    .footer-description {
        color: #bdc3c7;
        line-height: 1.6;
        font-size: 0.9rem;
    }

    .footer-links h4,
    .footer-services h4,
    .footer-contact h4 {
        color: #ecf0f1;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .footer-links ul,
    .footer-services ul {
        list-style: none;
        padding: 0;
    }

    .footer-links li,
    .footer-services li {
        margin-bottom: 10px;
    }

    .footer-links a {
        color: #bdc3c7;
        text-decoration: none;
        transition: color 0.3s ease;
        font-size: 0.9rem;
    }

    .footer-links a:hover {
        color: #ff6b6b;
    }

    .footer-services li {
        color: #bdc3c7;
        font-size: 0.9rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        color: #bdc3c7;
        font-size: 0.9rem;
    }

    .contact-icon {
        margin-right: 10px;
        font-size: 1rem;
    }

    .footer-bottom {
        border-top: 1px solid #34495e;
        padding-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        background: rgba(255, 255, 255, 0.05);
        margin: 0 -40px -20px -40px;
        padding: 20px 40px;
    }

    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .copyright {
        color: #bdc3c7;
        font-size: 0.85rem;
        margin: 0;
        font-weight: 400;
    }

    .by-text {
        color: #95a5a6;
        font-size: 0.8rem;
        margin: 0;
        font-weight: 400;
    }

    .footer-right {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .follow-text {
        color: #bdc3c7;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .footer-social {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.3s ease;
        color: #bdc3c7;
    }

    .social-icon:hover {
        transform: translateY(-2px);
    }

    .social-icon.instagram {
        background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
        color: white;
    }

    .social-icon.instagram:hover {
        box-shadow: 0 4px 15px rgba(225, 48, 108, 0.3);
    }

    .social-icon.tiktok {
        background: #000000;
        color: white;
    }

    .social-icon.tiktok:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .social-icon.whatsapp {
        background: #25D366;
        color: white;
    }

    .social-icon.whatsapp:hover {
        box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .footer-container {
            padding: 40px 20px 20px;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 30px;
            text-align: center;
        }

        .footer-logo-section {
            max-width: 100%;
        }

        .footer-bottom {
            flex-direction: column;
            text-align: center;
            gap: 15px;
            margin: 0 -20px -20px -20px;
            padding: 20px 20px;
        }

        .footer-left {
            align-items: center;
        }

        .footer-right {
            flex-direction: column;
            gap: 10px;
        }
    }

    @media (max-width: 480px) {
        .footer-container {
            padding: 30px 15px 15px;
        }

        .footer-content {
            gap: 25px;
        }

        .footer-logo {
            font-size: 1.5rem;
        }

        .contact-item {
            justify-content: center;
        }

        .footer-bottom {
            margin: 0 -15px -15px -15px;
            padding: 15px 15px;
        }

        .social-icon {
            width: 28px;
            height: 28px;
        }

        .social-icon svg {
            width: 16px;
            height: 16px;
        }

        .copyright,
        .follow-text {
            font-size: 0.8rem;
        }

        .by-text {
            font-size: 0.75rem;
        }

        .footer-social {
            gap: 10px;
        }
    }
</style>
