                icon.style.filter = "drop-shadow(0 0 4px rgba(163, 177, 132, 0.5))";
              }
            });
            
            // Half day destinations - abu-abu (tidak aktif)
            halfDayDestinations.forEach(item => {
              item.style.color = "#999";
              item.style.opacity = "0.6";
              item.style.fontWeight = "400";
              const icon = item.querySelector(".detail-dest-icon");
              if (icon) {
                icon.style.backgroundImage = "url(\"data:image/svg+xml;base64,\")";
                icon.style.filter = "none";
              }
            });
          }
        }

        // Detail trip options toggle
        document.querySelectorAll(".detail-trip-option").forEach((option) => {
          option.addEventListener("click", () => {
            // Remove active from all options
            document.querySelectorAll(".detail-trip-option").forEach((opt) => {
              opt.classList.remove("active");
            });
            // Add active to clicked option
            option.classList.add("active");
            
            // Update destination colors
            updateDestinationColors(option);
          });
        });

        // Initialize destination colors for active option
        const activeOption = document.querySelector(".detail-trip-option.active");
        if (activeOption) {
          updateDestinationColors(activeOption);
        }
        
        // Initialize rent-car trip options toggle
        initializeRentCarTripOptions();
      });
      
