          // Synchronize mobile to desktop
          mobileTripOptions.forEach((option, index) => {
            option.addEventListener("click", function() {
              // Update mobile UI
              mobileTripOptions.forEach(opt => opt.classList.remove("active"));
              this.classList.add("active");
              
              // Synchronize with desktop options
              if (desktopTripOptions[index]) {
                const event = new MouseEvent("click", {
                  bubbles: true,
                  cancelable: true,
                  view: window
