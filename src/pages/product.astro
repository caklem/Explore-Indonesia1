        if (rentCarCard) {
          const desktopTripOptions = rentCarCard.querySelectorAll(".product-header .trip-options .trip-option");
          const mobileTripOptions = rentCarCard.querySelectorAll(".mobile-trip-options .trip-option");
          
          // Set initial active state on mobile based on desktop
          desktopTripOptions.forEach((option, index) => {
            if (option.classList.contains("active") && mobileTripOptions[index]) {
              mobileTripOptions[index].classList.add("active");
            }
