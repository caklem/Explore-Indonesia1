                    description: 'Scenic tropical island with traditional wooden boats anchored in crystal clear turquoise water'
                },
                {
                    name: 'Raja Ampat',
                    image: 'https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/df0f0416-680e-487b-8687-28206c0a4fa6.png',
                    description: 'Beautiful coral reef lagoon with colorful tropical fish swimming near vibrant coral formations'
                },
                {
                    name: 'Labuan Bajo',
                    image: 'https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/cf7b0246-662d-448e-ba41-49007cf481ca.png',
                    description: 'Wooden pier extending into calm turquoise waters with traditional Indonesian boats'
                },
                {
                    name: 'Wayag Island',
                    image: 'https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/059c73b0-bfe4-4461-b442-42b4e51f65de.png',
                    description: 'Person standing on a wooden dock overlooking pristine tropical bay with multiple traditional boats'
                },
                {
                    name: 'Bunaken',
                    image: 'https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/d5024252-1a9a-4c70-b2cf-46e39363341d.png',
                    description: 'Vibrant underwater scene showing a scuba diver exploring colorful coral gardens'
                },
                {
                    name: 'Pianemo',
                    image: 'https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/8f75eb74-4382-47e5-97d2-a3e3f7693d84.png',
                    description: 'Peaceful wooden boardwalk extending over calm tropical waters toward dramatic limestone cliffs'
                }
            ];

            let currentImageIndex = 0;

            // Add click event listeners to destination cards
            const destinationCards = document.querySelectorAll('.destination-card');
            destinationCards.forEach((card, index) => {
                card.addEventListener('click', () => {
                    openGalleryModal(index);
                });
            });

            function openGalleryModal(index) {
                currentImageIndex = index;
                showImage(currentImageIndex);
                galleryModal.classList.add('show');
                document.body.style.overflow = 'hidden';
            }

            function showImage(index) {
                const destination = destinations[index];
                galleryModalImg.src = destination.image;
                galleryModalImg.alt = destination.description;
                galleryTitle.textContent = destination.name;
                galleryCounter.textContent = `${index + 1} / ${destinations.length}`;
            }

            function closeGalleryModal() {
                galleryModal.classList.remove('show');
                document.body.style.overflow = '';
            }

            function nextImage() {
                currentImageIndex = (currentImageIndex + 1) % destinations.length;
                showImage(currentImageIndex);
            }

            function prevImage() {
                currentImageIndex = (currentImageIndex - 1 + destinations.length) % destinations.length;
                showImage(currentImageIndex);
            }

            // Event listeners for modal controls
            if (galleryClose) {
                galleryClose.addEventListener('click', closeGalleryModal);
            }

            if (galleryNext) {
                galleryNext.addEventListener('click', nextImage);
            }

            if (galleryPrev) {
                galleryPrev.addEventListener('click', prevImage);
            }

            // Close modal when clicking outside the image
            if (galleryModal) {
                galleryModal.addEventListener('click', (e) => {
                    if (e.target === galleryModal) {
                        closeGalleryModal();
                    }
                });
            }

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (galleryModal.classList.contains('show')) {
                    switch(e.key) {
                        case 'Escape':
                            closeGalleryModal();
                            break;
                        case 'ArrowLeft':
                            prevImage();
                            break;
                        case 'ArrowRight':
                            nextImage();
                            break;
                    }
                }
            });
        });
    </script>
</body>
