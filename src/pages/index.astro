        /* Social Icons */
        .social-section {
            text-align: center;
            padding: 60px 0;
            background-color: #f8f9fa;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
        }

        .social-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: #666;
            font-size: 24px;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .social-icon:nth-child(1):hover {
            background-color: #25d366;
            color: white;
            border-color: #25d366;
            transform: translateY(-2px);
        }

        .social-icon:nth-child(2):hover {
            background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
            color: white;
            border-color: #bc1888;
            transform: translateY(-2px);
        }

        .social-icon:nth-child(3):hover {
            background-color: #000;
            color: white;
            border-color: #000;
            transform: translateY(-2px);
        }

        .why-choose {
            text-align: center;
            margin-top: 30px;
        }

        .why-choose h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .why-choose p {
            font-family: 'Noto Sans', sans-serif;
            color: #666;
            font-size: 1rem;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Vehicle Packages */
        .packages-section {
            padding: 100px 0;
            background-color: #fff;
        }

        .packages-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 40px;
        }

        .packages-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 70px;
            text-align: left;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .packages-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 35px;
            margin-bottom: 60px;
        }

        .package-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            position: relative;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .package-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 48px rgba(0, 0, 0, 0.12);
        }

        .package-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            position: relative;
        }

        .package-content {
            padding: 25px 20px;
            text-align: center;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }

        .package-name {
            font-family: 'Noto Sans', sans-serif;
            font-size: 1rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            line-height: 1.3;
        }

        .package-price {
            font-family: 'Noto Sans', sans-serif;
            font-size: 1.2rem;
            font-weight: 700;
            color: #ff6b6b;
            margin-bottom: 0;
            position: relative;
        }

        .package-price::before {
            content: 'IDR ';
            font-size: 0.9rem;
            font-weight: 500;
            color: #666;
        }

        .view-details-section {
            text-align: center;
            margin-top: 50px;
        }

        .view-details-btn {
            background: linear-gradient(135deg, #ff6b6b, #ff5252);
            color: white;
            border: none;
            padding: 14px 32px;
            border-radius: 25px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.25);
        }

        .view-details-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(255, 107, 107, 0.35);
            background: linear-gradient(135deg, #ff5252, #e53e3e);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .packages-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 30px;
            }

            .packages-container {
                padding: 0 30px;
            }

            /* .hero-boat removed */
        }

        @media (max-width: 768px) {
            .nav-menu {
                display: none;
            }

            .hamburger {
                display: flex;
            }

            .hero-content {
                margin-top: 0px;
                margin-left: 20px;
                text-align: left;
                padding: 0 20px;
            }

            .hero h1 {
                font-size: 3rem;
                letter-spacing: 2px;
            }

            .hero-subtitle {
                font-size: 1.4rem;
            }

            .packages-grid {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .package-card {
                margin: 0 auto;
                max-width: 350px;
            }

            .social-icons {
                gap: 25px;
            }

            .social-icon {
                width: 60px;
                height: 60px;
                font-size: 24px;
            }

            /* .hero-boat removed */

            .nav-container,
            .hero-content,
            .packages-container {
                padding: 0 20px;
            }

            .packages-title {
                font-size: 1.8rem;
                text-align: center;
                margin-bottom: 50px;
            }
        }

        @media (max-width: 480px) {
            .hero h1 {
                font-size: 2rem;
            }

            .packages-title,
            .why-choose h2 {
                font-size: 1.6rem;
            }
        }

        /* Additional styling for better visual appeal */
        .package-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, transparent 0%, rgba(255, 107, 107, 0.05) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            border-radius: 16px;
        }

        .package-card:hover::before {
            opacity: 1;
        }

        .package-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #ff6b6b, #ff5252);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .package-card:hover::after {
            opacity: 1;
        }

        /* Smooth animations */
        .hero-content > * {
            animation: fadeInUp 0.8s ease forwards;
            opacity: 0;
            transform: translateY(30px);
        }

        .hero h1 {
            animation-delay: 0.2s;
        }

        .hero-subtitle {
            animation-delay: 0.4s;
        }

        .hero-description {
            animation-delay: 0.6s;
        }

        .cta-button {
            animation-delay: 0.8s;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
