---
// Import components
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | Explore Indonesia</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/LOGO.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/LOGO.png?v=2" />
    <link rel="shortcut icon" type="image/png" href="/LOGO.png?v=2" />
    <link rel="apple-touch-icon" sizes="180x180" href="/LOGO.png?v=2" />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400&family=Noto+Sans:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #f4f4f4;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      /* Main content wrapper for footer positioning */
      .main-content {
        flex: 1;
      }

      /* Hero Section */
      .hero {
        position: relative;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        background: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.2),
          rgba(0, 0, 0, 0.1)
        );
        overflow: hidden;
      }

      .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        opacity: 0;
        transition: opacity 2s ease-in-out;
      }

      .hero-bg.active {
        opacity: 1;
      }

      .hero-content {
        max-width: 1200px;
        margin: 0 auto 0 80px;
        padding: 0 40px;
        color: white;
        z-index: 2;
        position: relative;
        text-align: left;
        margin-top: 80px;
      }

      .hero h1 {
        font-family: "Cormorant Garamond", serif;
        font-size: 4rem;
        font-weight: 600;
        letter-spacing: 3px;
        margin-bottom: 10px;
        text-transform: uppercase;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5);
        line-height: 1.0;
      }

      .hero-subtitle {
        font-family: "Noto Sans", sans-serif;
        font-size: 1.2rem;
        margin-bottom: 8px;
        font-weight: 300;
        opacity: 0.9;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        font-style: normal;
        letter-spacing: 0.3px;
        line-height: 1.2;
      }

      .hero-subtitle:last-of-type {
        margin-bottom: 50px !important;
      }

      .hero-description {
        font-family: "Noto Sans", sans-serif;
        font-size: 1.1rem;
        margin-bottom: 15px;
        opacity: 0.9;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        font-weight: 300;
        letter-spacing: 0.3px;
        line-height: 1.4;
      }

      .cta-button {
        background: white;
        color: #f28482;
        border: 2px solid #f28482;
        padding: 10px 24px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 400;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        align-self: flex-start;
        font-family: "Noto Sans", sans-serif;
        margin-top: 60px !important;
      }

      .cta-button:hover {
        background-color: #f28482;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(242, 132, 130, 0.3);
      }

      /* Speedboat Image in Hero - REMOVED */
      /*
        .hero-boat {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 450px;
            height: auto;
            z-index: 1;
            opacity: 0.95;
        }
        */

      /* Social Icons */
      .social-section {
        text-align: center;
        padding: 60px 0;
        background-color: #f4f4f4;
      }

      .social-icons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 40px;
      }

      .social-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #666;
        font-size: 24px;
        transition: all 0.3s ease;
        border: none;
        box-shadow: none;
      }

      .social-icon:nth-child(1):hover {
        background-color: transparent;
        color: #25d366;
        border-color: transparent;
        transform: translateY(-2px);
      }

      .social-icon:nth-child(2):hover {
        background: transparent;
        color: #e4405f;
        border-color: transparent;
        transform: translateY(-2px);
      }

      .social-icon:nth-child(3):hover {
        background-color: transparent;
        color: #000;
        border-color: transparent;
        transform: translateY(-2px);
      }

      .why-choose {
        text-align: center;
        margin-top: 30px;
      }

      .why-choose h2 {
        font-family: "Cormorant Garamond", serif;
        font-size: 2rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
      }

      .why-choose p {
        font-family: "Noto Sans", sans-serif;
        color: #666;
        font-size: 1rem;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
      }

      /* Vehicle Packages */
      .packages-section {
        padding: 100px 0;
        background-color: #f4f4f4;
      }

      .packages-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
      }

      .packages-title {
        font-family: "Cormorant Garamond", serif;
        font-size: 2.2rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 70px;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 2px;
      }

      .packages-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin-bottom: 60px;
      }

      .package-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        position: relative;
      }

      .package-card {
        background: white;
        border-radius: 50px;
        overflow: visible;
        box-shadow: none;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        position: relative;
        border: 1px solid rgba(0, 0, 0, 0.05);
        height: 300px;
        width: 100%;
      }

      .package-card:hover {
        transform: none;
        box-shadow: none;
      }

      .package-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        border-radius: 50px;
      }

      .package-content {
        background: rgba(255, 255, 255, 0.9);
        padding: 15px 20px 25px 20px;
        border-radius: 8px;
        text-align: center;
        width: calc(100% - 80px);
        margin: 0 40px;
        box-shadow: 0 4px 12px #F4F4F4;
        position: absolute;
        bottom: -60px;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 2;
      }

      .package-name {
        font-family: "Noto Sans", sans-serif;
        font-size: 0.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .package-price {
        font-family: "Noto Sans", sans-serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
      }

      .package-price::before {
        content: "IDR ";
        font-size: 0.9rem;
        font-weight: 500;
        color: #666;
      }

      .view-details-section {
        text-align: center;
        margin-top: 50px;
      }

      .view-details-btn {
        background: #fff;
        color: #f28482;
        border: 1px solid #f28482;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-family: "Noto Sans", sans-serif;
        pointer-events: auto;
        user-select: none;
      }

      .view-details-btn:hover {
        background-color: #f28482;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(242, 132, 130, 0.3);
      }

      /* Responsive Design */
      @media (max-width: 1024px) {
        .packages-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 30px;
        }

        .packages-container {
          padding: 0 30px;
        }

        /* Ensure header consistency on tablet */
        .header {
          padding: 18px 0;
        }

        .nav-container {
          padding: 0 30px;
        }

        .package-content {
          width: calc(100% - 60px);
          margin: 0 30px;
          bottom: -60px;
        }

        /* .hero-boat removed */
      }

      @media (max-width: 768px) {
        .nav-menu {
          display: none;
        }

        .hamburger {
          display: flex;
        }

        .hero-content {
          margin-top: 0px;
          margin-left: 20px;
          text-align: left;
          padding: 0 20px;
        }

        .hero h1 {
          font-size: 3rem;
          letter-spacing: 2px;
          margin-bottom: 10px;
          line-height: 1.0;
        }

        .hero-subtitle {
          font-size: 1rem !important;
          margin-bottom: 6px !important;
          line-height: 1.2;
        }

        .packages-grid {
          grid-template-columns: 1fr;
          gap: 25px;
        }

        .package-card {
          margin: 0 auto;
          max-width: 350px;
        }

        .social-icons {
          gap: 25px;
        }

        .social-icon {
          width: 60px;
          height: 60px;
          font-size: 24px;
        }

        /* .hero-boat removed */

        .nav-container,
        .hero-content,
        .packages-container {
          padding: 0 20px;
        }

        /* Ensure header consistency on mobile */
        .header {
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          z-index: 1000;
          padding: 15px 0;
          transition: all 0.3s ease;
        }

        .header.scrolled {
          background: rgba(255, 255, 255, 0.95) !important;
          backdrop-filter: blur(20px) !important;
          box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1) !important;
        }

        .nav-container {
          max-width: 100%;
          padding: 0 15px;
        }

        .logo {
          font-size: 1.5rem;
        }

        .packages-title {
          font-size: 1.8rem;
          text-align: center;
          margin-bottom: 50px;
        }

        .packages-grid {
          grid-template-columns: 1fr;
          gap: 50px;
        }

        .package-card {
          margin: 0 auto;
          max-width: 350px;
        }

        .package-content {
          width: calc(100% - 100px);
          margin: 0 50px;
          bottom: -40px;
          box-shadow: 0 3px 8px #F4F4F4;
        }
      }

      @media (max-width: 480px) {
        .hero h1 {
          font-size: 2rem;
        }

        .packages-title,
        .why-choose h2 {
          font-size: 1.6rem;
        }

        .packages-container {
          padding: 0 15px;
        }

        .package-content {
          width: calc(100% - 90px);
          margin: 0 45px;
          bottom: -35px;
          padding: 12px 15px 20px 15px;
          box-shadow: 0 2px 6px #F4F4F4;
        }

        .package-name {
          font-size: 0.75rem;
        }

        .package-price {
          font-size: 1rem;
        }

        .view-details-btn {
          font-size: 0.7rem;
          padding: 6px 15px;
        }
      }

      /* Additional styling for better visual appeal - DISABLED */
      .package-card::before {
        display: none;
      }

      .package-card::after {
        display: none;
      }

      /* Smooth animations */
      .hero-content > * {
        animation: fadeInUp 0.8s ease forwards;
        opacity: 0;
        transform: translateY(30px);
      }

      .hero h1 {
        animation-delay: 0.2s;
      }

      .hero-subtitle {
        animation-delay: 0.4s;
      }

      .hero-description {
        animation-delay: 0.6s;
      }

      .cta-button {
        animation-delay: 0.8s;
      }

      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Modal CSS */
      .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
      }

      .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: none;
        border-radius: 15px;
        width: 90%;
        max-width: 600px;
        position: relative;
        animation: slideIn 0.3s;
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        position: absolute;
        right: 20px;
        top: 15px;
      }

      .close:hover,
      .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
      }

      .modal-header h2 {
        margin: 0 0 20px 0;
        color: #333;
        font-size: 24px;
      }

      .modal-body {
        line-height: 1.6;
      }

      .package-detail-info {
        margin-bottom: 20px;
      }

      .package-detail-info h3 {
        color: #007bff;
        margin-bottom: 10px;
        font-size: 18px;
      }

      .package-detail-info p,
      .package-detail-info ul {
        color: #666;
        margin-bottom: 15px;
      }

      .package-detail-info ul {
        padding-left: 20px;
      }

      .package-detail-info li {
        margin-bottom: 5px;
      }

      .package-price-detail {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        margin: 20px 0;
      }

      .package-price-detail h3 {
        margin: 0;
        font-size: 20px;
      }

      /* Detail Modal Styles */
      .detail-modal {
        display: none !important; /* Force hidden secara default */
        position: fixed;
        z-index: 10000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        align-items: center;
        justify-content: center;
        padding: 20px;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
      }

      .detail-modal.show {
        display: flex !important;
        opacity: 1 !important;
        visibility: visible !important;
      }

      .detail-modal-content {
        position: relative;
        width: 95%;
        max-width: 550px;
        max-height: 85vh;
        background: white;
        border-radius: 20px;
        padding: 0;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        border: 2px solid #f28482;
        overflow: hidden;
        display: flex;
        flex-direction: column;
      }

      .detail-modal-body {
        overflow-y: auto;
        flex: 1;
        padding-bottom: 60px;
      }

      .detail-modal-body::-webkit-scrollbar {
        width: 6px;
      }

      .detail-modal-body::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
      }

      .detail-modal-body::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
      }

      .detail-modal-body::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
      }

      .detail-modal-close {
        position: absolute;
        top: 20px;
        right: 25px;
        color: #666;
        font-size: 26px;
        font-weight: bold;
        cursor: pointer;
        z-index: 10001;
        transition: color 0.3s ease;
      }

      .detail-modal-close:hover {
        color: #f28482;
      }

      .detail-header {
        background: #ffff;
        padding: 30px 30px 25px;
        border-bottom: 1px solid #eee;
        margin-top: 0;
      }

      .detail-model {
        font-size: 20px;
        font-weight: 700;
        color: #333;
        display: block;
        margin-bottom: 10px;
        line-height: 1.2;
      }

      .detail-specs {
        font-size: 15px;
        color: #666;
        font-weight: 400;
        line-height: 1.3;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px;
      }

      .spec-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
        color: #555;
        white-space: nowrap;
      }

      .spec-icon {
        width: 24px;
        height: 24px;
        opacity: 1;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
        image-rendering: pixelated;
        image-rendering: auto;
        filter: contrast(1.6) brightness(1.3) saturate(1.2) sharpness(1.1);
        object-fit: contain;
        transform: scale(1.05);
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
        will-change: transform;
      }

      .spec-item:first-child .spec-icon {
        width: 28px;
        height: 28px;
        transform: scale(1.1);
      }

      .spec-separator {
        color: #ccc;
        font-weight: 300;
        margin: 0 4px;
      }

      .detail-trip-options {
        display: flex;
        margin: 30px 30px;
        gap: 15px;
        flex-wrap: wrap;
      }

      .detail-trip-option {
        flex: 1;
        min-width: 200px;
        padding: 22px 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 15px;
        border: 1px solid #ddd;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .detail-trip-option.active {
        background: #a3b184;
        color: white;
        border-color: #a3b184;
      }

      .detail-trip-option:not(.active) {
        background: #ede6da;
        color: #6b5b47;
        border-color: #ddd;
      }

      .detail-trip-title {
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 12px;
        letter-spacing: 0.5px;
      }

      .detail-trip-price {
        font-size: 16px;
        font-weight: 700;
        margin-bottom: 8px;
      }

      .detail-trip-time {
        font-size: 13px;
        opacity: 0.9;
      }

      .detail-destinations {
        display: flex;
        gap: 35px;
        margin: 30px 30px;
        padding: 0;
      }

      .detail-dest-column {
        flex: 1;
      }

      /* Destination column visibility */
      .half-day-destinations {
        display: flex;
        flex-direction: column;
      }

      .full-day-destinations {
        display: flex;
        flex-direction: column;
      }


      .detail-dest-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 14px;
        font-size: 15px;
        color: #333;
        line-height: 1.4;
        transition: all 0.3s ease;
      }

      .detail-dest-icon {
        width: 14px;
        height: 14px;
        background-image: url("data:image/svg+xml;base64,");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        flex-shrink: 0;
        margin-top: 2px;
        transition: all 0.3s ease;
      }


      .detail-section {
        margin: 30px 30px;
        border-top: 1px solid #eee;
        padding-top: 30px;
      }

      .detail-section h3 {
        font-size: 15px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 25px;
        color: #333;
        letter-spacing: 0.5px;
      }

      .detail-included-excluded {
        display: flex;
        gap: 35px;
        background-color: #ede6da;
        padding: 20px;
        border-radius: 10px;
      }

      .detail-included,
      .detail-excluded {
        flex: 1;
      }

      .detail-include-item,
      .detail-exclude-item {
        font-size: 14px;
        margin-bottom: 10px;
        color: #333;
        line-height: 1.5;
      }

      .detail-include-item {
        color: #333;
      }

      .detail-exclude-item {
        color: #333;
      }

      /* .detail-footer {
        border-top: 1px solid #eee;
        padding: 25px 30px;
        text-align: center;
        font-size: 14px;
        color: #333;
        background: #333;
      } */

      .detail-contact {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
      }

      .detail-phone {
        font-weight: 700;
        color: #333;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .whatsapp-icon {
